# ==========================================
# ARQUIVO: server/.env.example
# ==========================================

# Configurações do Servidor
NODE_ENV=development
PORT=3001

# JWT Secret (ALTERE PARA UMA CHAVE FORTE EM PRODUÇÃO)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_com_pelo_menos_32_caracteres
JWT_EXPIRES_IN=7d

# Database
DATABASE_URL="file:./tracionar.db"

# Facebook App Configuration
FACEBOOK_APP_ID=seu_app_id_aqui
FACEBOOK_APP_SECRET=seu_app_secret_aqui
FACEBOOK_REDIRECT_URI=http://localhost:3001/api/facebook/callback

# OpenAI Configuration
OPENAI_API_KEY=sua_chave_openai_aqui
OPENAI_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Configurações de Produção (descomente quando for para produção)
# NODE_ENV=production
# PORT=3001
# FACEBOOK_REDIRECT_URI=https://tracionar.com.br/api/facebook/callback

# SSL/HTTPS (para produção)
# SSL_KEY_PATH=/path/to/ssl/key
# SSL_CERT_PATH=/path/to/ssl/cert

# Backup automático (opcional)
# BACKUP_ENABLED=true
# BACKUP_FREQUENCY=daily
# BACKUP_RETENTION_DAYS=30